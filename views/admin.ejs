<% include partials/header %>

<!-- Content -->
<div class="container" id="admin-container">
        <div class="row">
            <div class="col-sm-12 title-row">
                <h1>Admin</h1>
                <div class="row">
                    <div class="col-12">
                        <h3>- Edit Product List</h3>
                    </div>
                </div>
                <table class="table">
                    <form id="addProductForm" method="POST" action="/admin">
                        <thead>
                            <tr>
                                <th>Products</th>
                                <th>Price</th>
                                <th>Catgeory</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tr>
                            <td><input name="productName" type="text" class="form-control" placeholder="Product name..." required></td>
                            <td><input name="price" type="number" step="0.01" class="form-control" placeholder="Product price..." required></td>
                            <td><select name="category" class="form-control" required>
                                <option selected>Product category...</option>
                                <option>Drinks</option>
                                <option>Noodle</option>
                                <option>Rice</option>
                                <option>Western</option></select></td>
                            <td><input type="submit" class="btn btn-outline-success add-product" value="Add + "></td>
                        </tr>
                    </form>
                </table>
                <table class="table">
                <div class="row">
                    <td id="productName" class="">
                        <% for(var i = 0; i < products.length; i++) { %>
                           <li class="a"><%= products[i].productName %></li>
                        <% } %>
                    </td>
                    <td id="productPrice" class="">
                        <% for(var i = 0; i < products.length; i++) { %>
                           <li>Â£<%= products[i].price %></li>
                        <% } %>
                    </td>
                    <td id="productCategory" class="">
                        <% for(var i = 0; i < products.length; i++) { %>
                           <li><%= products[i].category %></li>
                        <% } %>
                    </td>
                    <td id="actions" class="">
                        <% for(var i = 0; i < products.length; i++) { %>
                           <li><button id="saveProduct" type="button" class="btn btn-outline-success a" method="UPDATE" action="/admin">Save</button>
                            <button id="editProduct" type="button" class="btn btn-outline-warning a" action="">Edit</button>
                           <button name="deleteProduct" type="button" class="btn btn-outline-danger a" method="DELETE" action="/admin">Delete</button></li><br />
                        <% } %>
                    </td>
                </div>
            </table>

            </div>
        </div> <!-- row -->
    </div> <!-- containter-->


<% include partials/footer %>